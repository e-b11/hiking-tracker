  <!-- Cards just link to alltrails for the time being. These are just hikes that we like, but all trails has more information for users. -->
  <section class="cards">
    <!-- <h2 class="sr-only, cards">Cards</h2> -->
    <a href="https://www.alltrails.com/trail/us/utah/cecret-lake-trail" class="card">
