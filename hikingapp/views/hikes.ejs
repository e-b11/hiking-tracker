<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hike Tracker</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,400;0,700;1,400&family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <header>
        <div class="menu-icon">
            <svg viewbox="0 0 60 60" width="40px" height="40px">
                <line x1="5%" y1="50%" x2="95%" y2="50%" />
                <line x1="5%" y1="50%" x2="95%" y2="50%" />
            </svg>
        </div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/hikes">My Hikes</a></li>
                <li><a href="/recommendations">Recommendations</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
    </header>
    <h1 class="title">My Hikes</h1>
    <main class="maintable">


        <table class="table table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Username</th>
                    <th>Hike Name</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Length (miles)</th>
                    <th>Elevation (feet)</th>
                    <th>Location</th>
                    <th>Rating</th>
                    <th></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                <!-- make ejs display hikes here using for loop -->
                <% for (let iCount=0; iCount < myhikes.length; iCount++) { %>
                    <tr>
                        <td>
                            <%= myhikes[iCount].username%>
                        </td>
                        <td>
                            <%= myhikes[iCount].hike_name%>
                        </td>
                        <td>
                            <%= myhikes[iCount].hike_description%>
                        </td>
                        <td>
                            <% const dateObject=myhikes[iCount].date; const year=dateObject.getFullYear(); const
                                month=String(dateObject.getMonth() + 1).padStart(2, '0' ); const
                                day=String(dateObject.getDate()).padStart(2, '0' ); const
                                formattedDate=`${year}-${month}-${day}`; %>
                                <%= formattedDate %>
                        </td>
                        <td>
                            <%= myhikes[iCount].length%>
                        </td>
                        <td>
                            <%= myhikes[iCount].elevation%>
                        </td>
                        <td>
                            <%= myhikes[iCount].location%>
                        </td>
                        <td>
                            <%= myhikes[iCount].rating %>

                        </td>
                        <td>
                            <form action="/editHike/<%= myhikes[iCount].hike_id %>" method="GET">
                                <button type="submit" class="button" style="margin: 0;">Edit</button>
                            </form>
                        </td>
                        <td>
                            <form action="/deleteHike/<%= myhikes[iCount].hike_id %>" method="POST">
                                <button type="submit" class="button" style="margin: 0;">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <a href="/addHike" class="button mainbutton">Add Hike</a>
    </main>
    <ul class="background">
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <footer class="footercolor">
        <p><strong>Section 3-3 &copy; 2023</strong></p>
    </footer>

    <script>
        document.querySelector(".menu-icon").addEventListener("click", function () {
            this.parentElement.classList.toggle("close");
        });
    </script>
</body>

</html>